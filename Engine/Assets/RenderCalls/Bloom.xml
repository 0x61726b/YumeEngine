      </Parameters>
    </Triangle>
    <!-- End Blur V and H -->

    <!-- Copy back -->

    <Triangle PassName="BlurCopyBack2" Identifier="Bloom" Ps="Copy" PsEntry="ps_copy" Flags="NODS" Output="BlurTarget2">
      <Samplers>
