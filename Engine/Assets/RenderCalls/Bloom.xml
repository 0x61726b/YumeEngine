    <!-- Blur V and H Iteration 0 -->
    <Triangle PassName="BlurV1" Identifier="Bloom" Ps="Bloom" PsEntry="ps_gauss_bloom_v" Flags="NODS" Output="BlurTarget4">
      <Samplers>
